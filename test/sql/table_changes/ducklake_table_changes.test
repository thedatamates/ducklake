# name: test/sql/table_changes/ducklake_table_changes.test
# description: test ducklake_table_changes function
# group: [table_changes]

require ducklake

require parquet

test-env DUCKLAKE_CONNECTION __TEST_DIR__/{UUID}.db

test-env DATA_PATH __TEST_DIR__


statement ok
ATTACH 'ducklake:${DUCKLAKE_CONNECTION}' AS ducklake (DATA_PATH '${DATA_PATH}/ducklake_table_changes_files', CATALOG 'test', CREATE_IF_NOT_EXISTS true);

# snapshot 2
statement ok
CREATE TABLE ducklake.test(i INTEGER);

# snapshot 3
statement ok
INSERT INTO ducklake.test FROM range(3);

# snapshot 4
statement ok
UPDATE ducklake.test SET i=i+100

# snapshot 5
statement ok
UPDATE ducklake.test SET i=i+100

# snapshot 6
statement ok
DELETE FROM ducklake.test

query IIII
FROM ducklake.table_changes('test', 0, 3) ORDER BY ALL
----
3	0	insert	0
3	1	insert	1
3	2	insert	2

# with timestamps
statement ok
SET VARIABLE begin_ts = (SELECT snapshot_time FROM ducklake.snapshots() WHERE snapshot_id = 2)

statement ok
SET VARIABLE end_ts = (SELECT snapshot_time FROM ducklake.snapshots() WHERE snapshot_id = 3)

query IIII
FROM ducklake.table_changes('test', getvariable('begin_ts'), getvariable('end_ts')) ORDER BY ALL
----
3	0	insert	0
3	1	insert	1
3	2	insert	2

