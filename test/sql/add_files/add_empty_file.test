# name: test/sql/add_files/add_empty_file.test
# description: test ducklake adding empty files
# group: [add_files]

require ducklake

require parquet

test-env DUCKLAKE_CONNECTION __TEST_DIR__/{UUID}.db

test-env DATA_PATH __TEST_DIR__

statement ok
ATTACH 'ducklake:${DUCKLAKE_CONNECTION}' AS ducklake (DATA_PATH '${DATA_PATH}/ducklake_empty_files/', METADATA_CATALOG 'metadata', CATALOG 'test', CREATE_IF_NOT_EXISTS true);

statement ok
CREATE TABLE ducklake.test(col1 INTEGER, col2 VARCHAR);

statement ok
INSERT INTO ducklake.test VALUES (100, 'hello');

# write a parquet file outside of DuckLake
statement ok
COPY (SELECT 200 col1, 'world' col2 LIMIT 0) TO '${DATA_PATH}/ducklake_empty_files/test/main/test/empty_file.parquet';

statement ok
BEGIN

# make its existence known to DuckLake
statement ok
CALL ducklake_add_data_files('ducklake', 'test', '${DATA_PATH}/ducklake_empty_files/test/main/test/empty_file.parquet')

query II
FROM ducklake.test
----
100	hello

statement ok
COMMIT

query II
FROM ducklake.test
----
100	hello
